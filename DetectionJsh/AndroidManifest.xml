<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jasam.detectionjsh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"    
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" 
        android:configChanges="keyboardHidden|orientation" >
        <activity
            android:name="com.jasam.detectionjsh.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="sensor" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.UserTakeActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            >
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.UserTakeActivity2"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.MemoryPhotoActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.MemoryPhotoSubActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.imageProccessing.ImageProccessignActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.imageProccessing.SmothingSubActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name="com.jasam.detectionjsh.SettingsActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            >
        </activity>
        
    </application>

</manifest>
